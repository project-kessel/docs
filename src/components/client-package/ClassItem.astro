---
import ConstructorsList from './ConstructorsList.astro';
import PropertiesList from './PropertiesList.astro';
import MethodsList from './MethodsList.astro';

interface ClassData {
  name: string;
  description?: string;
  constructors?: Array<{
    description?: string;
    name?: string;
    params?: Array<{
      name: string;
      type: string;
      description?: string;
    }>;
  }>;
  properties?: Array<{
    name: string;
    type: string;
    readonly?: boolean;
    description?: string;
  }>;
  methods?: Array<{
    name: string;
    description?: string;
    params?: Array<{
      name: string;
      type: string;
      description?: string;
    }>;
    returns?: string;
    async?: boolean;
  }>;
  statics?: Array<{
    name: string;
    description?: string;
    params?: Array<{
      name: string;
      type: string;
      description?: string;
    }>;
    returns?: string;
    async?: boolean;
  }>;
}

interface Props {
  classData: ClassData;
}

const { classData } = Astro.props;
---

<section id={`class-${classData.name}`} class="mb-4">
  <h3>{classData.name}</h3>
  {classData.description && <p>{classData.description}</p>}

  <ConstructorsList constructors={classData.constructors} className={classData.name} />
  <PropertiesList properties={classData.properties} />
  <MethodsList methods={classData.methods} title="Methods" />
  <MethodsList methods={classData.statics} title="Static Methods" />
</section>