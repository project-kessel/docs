---
import type { Param } from "../../schemas/client-package";

interface Props {
  params?: Param[];
}

const { params } = Astro.props;
---

{
  params?.map((param, idx) => (
    <>
      {idx > 0 && ", "}
      <code>
        {param.name}
        {param.optional ? "?" : ""}
      </code>
      : <code>{param.type}</code>
    </>
  ))
}
