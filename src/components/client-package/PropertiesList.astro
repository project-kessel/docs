---
import DescriptionBlock from "./DescriptionBlock.astro";
import type { Property } from "../../schemas/client-package";

interface Props {
  properties?: Property[];
}

const { properties } = Astro.props;
---

{
  properties && (
    <>
      <h4>Properties</h4>
      <ul>
        {properties.map((property) => (
          <li>
            <code>{property.name}</code>:{" "}
            {typeof property.type === "string" ? (
              <code>{property.type}</code>
            ) : property.type.link ? (
              <a href={property.type.link}>
                <code>{property.type.name}</code>
              </a>
            ) : (
              <code>{property.type.name}</code>
            )}
            {property.readonly && " (readonly)"}
            <DescriptionBlock description={property.description} />
          </li>
        ))}
      </ul>
    </>
  )
}
